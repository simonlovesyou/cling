{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}